@model IEnumerable<BusinessObject.MemberDto>

@{
    ViewData["Title"] = "Member List";
}

<h1>Members</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Member</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Member ID</th>
            <th>Email</th>
            <th>Company Name</th>
            <th>City</th>
            <th>Country</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.MemberId</td>
                <td>@member.Email</td>
                <td>@member.CompanyName</td>
                <td>@member.City</td>
                <td>@member.Country</td>
                <td>
                    <a asp-action="Details" asp-route-id="@member.MemberId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@member.MemberId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@member.MemberId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
