@model IEnumerable<BusinessObject.OrderDto>

@{
    ViewData["Title"] = "Order List";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Order</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Member ID</th>
            <th>Order Date</th>
            <th>Required Date</th>
            <th>Shipped Date</th>
            <th>Freight</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.MemberId</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.RequiredDate.ToShortDateString()</td>
                <td>@order.ShippedDate.ToShortDateString()</td>
                <td>@order.Freight</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
