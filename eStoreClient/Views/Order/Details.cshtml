@model BusinessObject.OrderDto

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderId</dd>

        <dt class="col-sm-2">Member ID</dt>
        <dd class="col-sm-10">@Model.MemberId</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Required Date</dt>
        <dd class="col-sm-10">@Model.RequiredDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Shipped Date</dt>
        <dd class="col-sm-10">@Model.ShippedDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Freight</dt>
        <dd class="col-sm-10">@Model.Freight</dd>
    </dl>
    <p>
        <a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </p>
</div>
